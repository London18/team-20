(function($){var message=$('#donation_page_message').find('p');var default_message=message.text();$.each(singular_donation_values,function(){var description=this.description;$("#donate-"+this.amount).parent().on("mouseenter",function(){message.text(description);}).on("mouseleave",function(){message.text(default_message);});});$.each(monthly_donation_values,function(){var description=this.description;$("#subscribe-"+this.amount).parent().on("mouseenter",function(){message.text(description);}).on("mouseleave",function(){message.text(default_message);});});$('.stripe-custom-input').focus(function(){$(this).parent().find('.stripe-custom-radio').prop('checked',true);updateStripeForm($(this));$(this).parent().parent().find('label').addClass('stripeIsActive');});$(".stripe-button-el").prop("disabled",true);$("input:radio[name='amount'], input:radio[name='plan']").change(function(){updateStripeForm($(this));$(this).parent().find('label').addClass('stripeIsActive');});function updateStripeForm(option){option.closest("form").find('label').removeClass('stripeIsActive');handleStripeButton(option);changeStripeButtonText(option,option.parent().find('label').text());}
